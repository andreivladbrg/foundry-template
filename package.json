{
  "name": "foundry-template",
  "description": "Ethereum smart contracts template with foundry",
  "version": "1.0.0",
  "author": {
    "name": "Andrei Vlad Birgaoanu",
    "url": "https://github.com/andreivladbrg"
  },
  "devDependencies": {
    "prettier": "^2.8.7",
    "solhint": "^3.4.1"
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "forge",
    "foundry",
    "smart-contracts",
    "solidity",
    "template"
  ],
  "scripts": {
    "clean": "rm -rf cache out",
    "lint": "yarn lint:sol && yarn prettier:check",
    "lint:sol": "solhint \"{src,test}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\""
  }
}
